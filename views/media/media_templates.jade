script(id="editMediaOverlayTmpl", type="text/x-jQuery-tmpl")

  a.close()
  h4 Edit Media
  form#mediaForm-edit.form.label-top
    img(src="/media/${thumbnail}", style="position:absolute; top:50px; right: 30px;")
    div.field
      label(for='filename') File Name 
      input#fileName-edit(name='filename', size='30', type='text', value='${name}')
    div.field
      label(for='description') Description 
      input#description-edit(name='description', size='30', type='text', value='${desc}')
    div.field.clearfix
    div#uniform-file.uploader.active
      input.#file-edit.file(id="file", name="file", style="opacity: 0; ", size="35", type="file")
      span.filename
        |No file selected
      span.action
        |Choose File
      label(for='file') File Upload 
      input#file.file(name="file", style='opacity: 0;', size='35', type='file')

    div.field
      label(for='tags') Tags 
      div#tagsList-edit.field

    div.field
      select#selectTags-edit
        option(value="default") Select a tag

    div.field
      input#tagName-edit(name='tagName', size='20',
        type='text', value='')
      button#createTagBtn-edit.btn Add Tag

    input#freshTags-edit(name='tags', type='hidden', value='')
    input(name='mediaID', type='hidden', value='${_id}')

    div.field
    div.buttonrow
      button#submitMediaBtn-edit.btn Update Media

script(id="searchMediaTmpl", type="text/x-jQuery-tmpl")
  div.tag(query="${name}", class="${name}")
    div.removeFilter(query="${name}")
    div.filter
      span.name
        |${name}


