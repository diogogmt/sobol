script(id="viewMediaOverlayTmpl", type="text/x-jQuery-tmpl")
  a.close()
  h4 ${name}
  img(alt='', src='/media/${src}', style='max-width: 450px;')
  p ${desc}


script(id="mediaGalleryTmpl", type="text/x-jQuery-tmpl")
  li(id="${_id}", data-id="${_id}")
    b ${name}
    br
    img(alt='', src='/media/${thumbnail}', width='150', height='150')
    .actions
      button.viewMedia.btn.btn-orange.btn-small.various(i="${i}") View
      button.editMedia.btn.btn-orange.btn-small.various(i="${i}") Edit
      button.btn.btn-grey.btn-small.delete.deleteImage(media="${_id}") Delete