

h2 #{custID}
      br
      a#addJob.btn(href='#newJob') Add Job      
      div(style='display: none;')
        #newJob(style='width: 800px; height: 400px; overflow: auto;')
          h4 Add Customer
          form.form.label-inline(id='addJobForm', action='/job/add', method='post')
            table
              tr
                td
                  .field
                    label(for='customid') customid 
                    input#customid.medium(name='customid', size='20', type='text', value='')
              tr
                td
                  .field
                    label(for='name') Job Name 
                    input#name.medium(name='name', size='20', type='text', value='')
              tr
                td
                  .field
                    label(for='description') Job Description
                    input#description.large(name='description', size='20', type='text', value='')
              tr
                td
                  .field
                    label(for='creationDate') Created On
                    input#creationDate.large(name='creationDate', size='20', type='text', value='')                    

      table#jobTable.display(cellpadding='0', cellspacing='0', border='0', rel='datatable')
        thead
          tr
            th ID
            th Custom ID
            th Job Name
            th Job Description
            th Created On
            th Status
        tbody

include ../includes/footer.jade

script(type="text/javascript")
  $(document).ready(function() {
    /*
    *   Add new job
    */
    $("#addJob").fancybox({
      'titlePosition'   : 'inside',
      'transitionIn'    : 'none',
      'transitionOut'   : 'none'
    });
    $("#jobTable").dataTable( {
      "bProcessing": true,
      "bDestroy": true,
      "sAjaxSource": "/datatable/job/findAll"
    });

        $('#addJobForm').submit(function() {
      alert('Submit initiated');
    });
  });
