
#login
  h1#title
    a(href='') Slate Admin
  #login-body.clearfix
    form#login_form(action='/login', name='login', method='post')
      .content_front
        .pad
          .field
            label Username:
            div
              span.input
                input#login_email.text(name='user[username]', value=user.username || '')
                span.input
          .field
            label Password:
            div
              span.input
                input#login_password.text(name='user[password]', type='password')
                a#forgotPassword(style='', href='#retrievePassword') Forgot password?
                span.input
          .checkbox
            span.label  
            div
              input#remember.checkbox(name='remember', value='yes', type='checkbox')
              label(style='display: inline;', for='remember') Remember me on this computer
          .field
            span.label  
            h3 #{errors.credentials}
            h3 #{errors.username}
            h3 #{errors.password}
            div
              button.btn(type='submit') Login
  div(style='display: none;')
    #retrievePassword(style='width: 400px; height: 120px; overflow: auto;')
      form.label-inline(action='/user/forgot', method='post')
        table
          tr
            td
              .field
                b To recover your password, enter your email address.
                br
                label(for='email') Email 
                input#email.medium(name='user[email]', size='20', type='text', value='')
                input(type='submit', value='Recover')

